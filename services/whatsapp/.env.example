# WhatsApp Service Configuration

# Server
PORT=3002
NODE_ENV=production

# CORS (comma-separated origins or * for all)
CORS_ORIGIN=*

# WhatsApp Cloud API (from Meta Developer Console)
WHATSAPP_BOT_ENABLED=true
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_verify_token_here

# Main API URL (for notifying about events)
MAIN_API_URL=http://localhost:10001

# API Key for protected endpoints (generate a secure random string)
SERVICE_API_KEY=your_secure_api_key_here

# Store URL (for bot messages)
STORE_URL=https://your-store.com
