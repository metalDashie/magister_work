# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=fullmag

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Monobank Configuration
MONOBANK_TOKEN=your-monobank-token
MONOBANK_API_URL=https://api.monobank.ua

# Fondy Configuration (alternative payment provider)
FONDY_MERCHANT_ID=your-fondy-merchant-id
FONDY_SECRET_KEY=your-fondy-secret-key

# Email Configuration (SMTP)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=FullMag <noreply@fullmag.com>

# Alternative: SendGrid SMTP
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your-sendgrid-api-key

# TurboSMS Configuration
TURBOSMS_API_KEY=your-turbosms-api-key
TURBOSMS_SENDER=FullMag

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Nova Poshta Configuration
NOVA_POSHTA_API_KEY=your-nova-poshta-api-key
